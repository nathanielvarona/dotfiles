[
  // Open Projects
  {
    "key": "cmd+o",
    "command": "projectManager.listGitProjects#sideBarGit"
  },

  // Keybinding for <leader>e using vscode-neovim, ignoring if terminal is active or in file creation/renaming, and ignoring NeoVim mode if not in editor
  {
    "key": "space e",
    "command": "vscode-neovim.send",
    "args": "<leader>e",
    "when": "(editorFocus && neovim.mode == 'normal') || !editorFocus && !terminalFocus && !inputFocus"
  },
  {
    "key": "space e",
    "command": "workbench.view.explorer",
    "when": "!explorerViewletVisible && (editorFocus && neovim.mode == 'normal' || !editorFocus && !terminalFocus && !inputFocus)"
  },
  {
    "key": "space e",
    "command": "workbench.action.closeSidebar",
    "when": "explorerViewletVisible && !editorFocus && !terminalFocus && !inputFocus"
  },
  {
    "key": "space e",
    "command": "workbench.files.action.focusFilesExplorer",
    "when": "explorerViewletVisible && editorFocus && (neovim.mode == 'normal' || !editorFocus && !terminalFocus && !inputFocus)"
  },

  // VSCode Terminal
  {
    "key": "ctrl+`",
    "when": "terminal.active",
    "command": "workbench.action.terminal.toggleTerminal"
  },
  {
    "key": "ctrl+\\",
    "when": "terminal.active",
    "command": "workbench.action.terminal.toggleTerminal"
  },
  {
    "key": "ctrl+alt+m",
    "command": "workbench.action.toggleMaximizedPanel"
  },

  // LazyGit
  {
    "key": "space g g",
    "command": "lazygit.openLazygit",
    "when": "(editorFocus && neovim.mode == 'normal') || (!editorFocus && !terminalFocus && !inputFocus && neovim.mode != 'insert')"
  },
  {
    "command": "lazygit.openLazygit",
    "key": "ctrl+g g"
  },
  {
    "command": "lazygit.openLazygit",
    "key": "ctrl+g ctrl+g"
  },

  // Settings Cycler
  {
    "key": "ctrl+l n",
    "command": "settings.cycle.relativeLineNumbers",
    "when": "editorFocus && neovim.mode == 'normal' || !editorFocus && !inputFocus && !terminalFocus && neovim.mode != 'insert'"
  },
  {
    "key": "ctrl+l ctrl+n",
    "command": "settings.cycle.relativeLineNumbers",
    "when": "editorFocus && neovim.mode == 'normal' || !editorFocus && !inputFocus && !terminalFocus && neovim.mode != 'insert'"
  }
]
